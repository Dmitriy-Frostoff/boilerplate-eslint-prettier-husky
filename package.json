{
  "name": "eslint-prettier-husky-boilerplate",
  "version": "1.0.0",
  "description": "It's a boilerplate for usage of eslint, prettier and husky (with hooks) in a future project. Check out the docs below to be in actual tune!",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint ./src --ignore-path ./configs/eslint/.eslintignore --config ./configs/eslint/.eslintrc.js",
    "lint:fix": "npx eslint ./src --ignore-path ./configs/eslint/.eslintignore --config ./configs/eslint/.eslintrc.js --fix",
    "prettier": "npx prettier ./src --check --ignore-path ./configs/prettier/.prettierignore --config ./configs/prettier/.prettierrc",
    "prettier:fix": "npx prettier ./src --write --ignore-path ./configs/prettier/.prettierignore --config ./configs/prettier/.prettierrc",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky"
  },
  "keywords": [
    "eslint",
    "prettier",
    "husky",
    "commitlint",
    "pre-commit",
    "commit-msg"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dmitriy-Frostoff/eslint-prettier-husky-boilerplate.git"
  },
  "author": "Dmitriy Frostoff",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.7",
    "prettier": "3.2.4"
  },
  "bugs": {
    "url": "https://github.com/Dmitriy-Frostoff/eslint-prettier-husky-boilerplate/issues"
  },
  "homepage": "https://github.com/Dmitriy-Frostoff/eslint-prettier-husky-boilerplate#readme"
}
